<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="ui.activity.auth.RecruitmentDetailActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/btn"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/img_10"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginStart="16dp"
            android:text="코도모 동아리원 모집합니다."
            android:textColor="@color/black"
            android:textSize="30dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn"
            android:layout_marginTop="20dp"/>

        <ImageView
            android:id="@+id/url"
            android:layout_width="477dp"
            android:layout_height="160dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/img_41"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/title" />

        <TextView
            android:id="@+id/content"
            android:layout_width="380dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="220dp"
            android:text="코도모 동아리원 모집합니다. 댓글을 달면 메세지로 \n연락을 드리겠습니다. 면접은 1월 22일까지 보고 \n결과는 추후 공지해 드리겠습니다."
            android:textColor="@color/black"
            android:textSize="17sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/url" />

        <ImageView
            android:id="@+id/imageView19"
            android:layout_width="390dp"
            android:layout_height="170dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/img_40"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/url" />

        <TextView
            android:id="@+id/qwe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            android:layout_marginStart="16dp"
            android:textColor="@color/black"
            android:text="댓글"
            app:layout_constraintTop_toBottomOf="@+id/content"
            android:layout_marginTop="40dp"
            app:layout_constraintLeft_toLeftOf="parent"/>


        <ImageView
            android:id="@+id/imageView20"
            android:layout_width="390dp"
            android:layout_height="90dp"
            android:layout_marginTop="4dp"
            android:src="@drawable/img_52"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/qwe" />

        <ImageView
            android:layout_width="390dp"
            android:layout_height="90dp"
            android:layout_marginTop="4dp"
            android:src="@drawable/img_53"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView20" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>